 */
function store_get_country($id) {
  $country = store_build_countries();
  return $country[$id];
}

/**
 * Build a list of Countries
 */
function store_build_countries() {

  static $countries;

  if (!$countries) {
    require_once(drupal_get_path('module', 'store') .'/store_location.inc');
    $countries = store_location_build_countries();
  }
  return $countries;
}

/**
 * Get available states. If $country is passed, then return an array
 * of states for that country. If nothing is passed then return
 * an array of countrys who have states, where each country contains
 * an array of states. If the requested country is not configured then
 * return an empty array.
 */
function store_build_states($country = NULL) {

  static $states;

  if (!$states) {  
    // User can add a custom state definition by adding a file called "store_custom.inc"
    // This will not accidentally be overridden by an ecommerce upgrade.
    if (file_exists(drupal_get_path('module', 'store') .'/store_custom.inc')) {
      require_once(drupal_get_path('module', 'store') .'/store_custom.inc');
      $states = store_custom_build_states();
    }
    else {
      require_once(drupal_get_path('module', 'store') .'/store_location.inc');
      $states = store_location_build_states();
    }
  }
  if ($country) {
    if (isset($states[$country])) {
      return $states[$country];
    }
    else {
      return array();
    }
  }
  else {
    return $states;
  }
}

