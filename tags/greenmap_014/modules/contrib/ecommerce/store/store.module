    $vars[STORE_TOKEN_TYPE]['txn-ship-to']           = t("Shipping to:\n%shipping-address\n", array('%shipping-address' => t('Shipping address is automatically added here')));
    $vars[STORE_TOKEN_TYPE]['txn-shipping-method']   = t("\nShipping service:\n%shipping-service\n", array('%shipping-service' => t('Shipping method is automatically added here')));
