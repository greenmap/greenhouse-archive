/**
 * @name Workflow statuses
 * @{
 * These states indicate the state of a transaction and provide a generic
 * workflow.
 */

/**
 * The transaction has been received.
 */
define('EC_WORKFLOW_RECEIVED', 1);

/**
 * Transaction has been invoiced.  This means an invoice has been printed or
 * viewed.
 */
define('EC_WORKFLOW_INVOICED', 2);

/**
 * The transaction has been shipped.
 */
define('EC_WORKFLOW_SHIPPED', 3);

/**
 * The transaction is awaiting a customer responce before it can continue.
 */
define('EC_WORKFLOW_AWAITING_RESPONSE', 4);

/**
 * The transaction has been canceled.
 */
define('EC_WORKFLOW_CANCELED', 5);

/**
 * The transaction is completed.
 */
define('EC_WORKFLOW_COMPLETED', 6);

/**
 * A security violation has been detected and the transaction has been taken out
 * of the general workflow and flagged.
 */
define('EC_WORKFLOW_SECURITY_VIOLATION', 7);

/**
 * @} End of "Workflow statuses".
 */

